<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1 m-b-25">Hotel reservation list</h2>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 10px;">
    <div class="col-lg-12">
        
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ImageUri</th>
                        <th>HotelName</th>
                        <th>RoomName</th>
                        <th>RoomNumber</th>
                        <th>Address</th>
                        <th>RoomArea</th>
                        <th>NumberOfBeds</th>
                        <th>CategoryName</th>
                        <th>UnitPrice</th>
                        <th>CheckIn</th>
                        <th>CheckOut</th>
                        <th>DayNumber</th>
                        <th>Cost</th>
                        <th>Thao t√°c</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                       var i=1;  
                    }
                    
                    @foreach (var booking in Model)
                     {
                         foreach(var item in booking.Items)
                            {
                                
                            <tr style="font-size:20px;text-align:center">
                                <th>@i</th>
                                <th><img src="@item.ImageUri"/></th>
                                <th>@item.HotelName</th>
                                <th>@item.RoomName</th>
                                <th>@item.RoomNumber</th>
                                <th>@item.Address</th>
                                <th>@item.RoomArea</th>
                                <th>@item.NumberOfBeds</th>
                                <th>@item.CategoryName</th>
                                <th>@item.UnitPrice</th>
                                <th>@item.CheckIn</th>
                                <th>@item.CheckOut</th>
                                <th>@item.DayNumber</th>
                                <th>@item.Cost</th>
                                <td>
                                    <a asp-action="Details" asp-controller="BookingManager" class="btn btn-info" asp-route-bookingId="@item.BookingId" asp-route-bookingItemId="@item.Id" >Details</a> 
                                </td>
                            </tr>
                                i++;
                                
                            }
                     }
                </tbody>
            </table>
        </div>
    </div>
</div>