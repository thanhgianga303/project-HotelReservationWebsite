@model CartItem
<div class="row" style="margin-top:20px;">
                    <div class="col-md-3">
                        <img src="@Model.ImageUrl" width="266.6px" height="300px"/>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6"><h3>Hotel name:</h3></div>
                            <div class="col-md-6">@Model.HotelName</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Room name:</h3></div>
                            <div class="col-md-6">@Model.RoomName</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Room number:</h3></div>
                            <div class="col-md-6">
                                @Model.RoomNumber
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Room area:</h3></div>
                            <div class="col-md-6">@Model.RoomArea</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Number of beds:</h3></div>
                            <div class="col-md-6">@Model.NumberOfBeds</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Address:</h3></div>
                            <div class="col-md-6">@Model.Address, @Model.City</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Category name:</h3></div>
                            <div class="col-md-6">@Model.CategoryName</div>
                        </div>
                        
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6"><h3>Check in:</h3></div>
                            <div class="col-md-6">@Model.CheckIn</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Check out:</h3></div>
                            <div class="col-md-6">@Model.CheckOut</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Unit price:</h3></div>
                            <div class="col-md-6">@Model.UnitPrice USD</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Day number:</h3></div>
                            <div class="col-md-6">@Model.dayNumber().Days.ToString()</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Cost:</h3></div>
                            <div class="col-md-6">@Model.cost()</div>
                        </div>
                    </div>
                    <form asp-action="DeleteItem" asp-controller="Cart" method="POST">
                    <div class="col-md-1">
                        
                            <input type="hidden" asp-for="@Model.Id">
                            <input type="submit" value="Delete">
                    </div>
                    </form>
                </div>