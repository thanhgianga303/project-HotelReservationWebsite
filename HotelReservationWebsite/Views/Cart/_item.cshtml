@model CartItem
<div class="row" style="margin-top:20px;">
                    <div class="col-md-4">
                        <img src="@Model.ImageUrl" width="266.6px" height="300px"/>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6"><h3>Room Name:</h3></div>
                            <div class="col-md-6">@Model.HotelName</div>
                        </div>
                    </div>
                    <form asp-action="DeleteItem" asp-controller="Cart" method="POST">
                    <div class="col-md-4">
                        
                            <input type="hidden" asp-for="@Model.Id">
                            <input type="submit" value="Delete">
                    </div>
                    </form>
                </div>