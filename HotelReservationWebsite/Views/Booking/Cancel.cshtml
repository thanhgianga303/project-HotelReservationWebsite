@model Booking
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
        <div class="row">
            <div class="col-md-3"><hr style="height:1px;border:none;color:#333;background-color:#333;"/></div>
            <div class="col-md-6" style="text-align: center;"><h1>Details of the reservation list have id @Model.BookingId </h1></div>
            <div class="col-md-3"><hr style="height:1px;border:none;color:#333;background-color:#333;"/></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-dark">
                    <thead>
                        <tr>
                        <th scope="col">Booking ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Identity Card</th>
                        <th scope="col">Booking Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Total cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        <td>@Model.BookingId</td>
                        <td>@Model.Name</td>
                        <td>@Model.Phone</td>
                        <td>@Model.IdentityCard</td>
                        <td>@Model.BookingDate</td>
                        <td>@Model.Status</td>
                        <td>@Model.Total</td>
                        </tr> 
                    </tbody>
                    </table>
            </div>
        </div>
            @foreach (var item in Model.Items)
            {
                <div class="row shadow p-3 mb-5 bg-white rounded">
                    <div class="col-md-4"><img src="@item.ImageUri" width="266.6px" height="300px" /></div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6"><h3>Hotel name:</h3></div>
                            <div class="col-md-6">@item.HotelName</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Room name:</h3></div>
                            <div class="col-md-6">@item.RoomName</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Number of rooms:</h3></div>
                            <div class="col-md-6">@item.RoomNumber</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Address:</h3></div>
                            <div class="col-md-6">@item.Address, @item.City</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Category name:</h3></div>
                            <div class="col-md-6">@item.CategoryName</div>
                        </div>
                        
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6"><h3>Check in:</h3></div>
                            <div class="col-md-6">@item.CheckIn</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Check out:</h3></div>
                            <div class="col-md-6">@item.CheckOut</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Unit price:</h3></div>
                            <div class="col-md-6">@item.UnitPrice USD</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Day number:</h3></div>
                            <div class="col-md-6">@item.DayNumber</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Cost:</h3></div>
                            <div class="col-md-6">@item.Cost</div>
                        </div>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <form asp-action="Cancel">
                        <input type="hidden" asp-for="@Model.BookingId"/>
                        <input type="submit" class="btn btn-danger" value="Cancel"/>
                    </form>
                </div>
            </div>
</div>