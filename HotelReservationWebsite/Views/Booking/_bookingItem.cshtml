@model Booking
@for (int i = 0; i < Model.Items.Count; i++)
    {
        var item = Model.Items[i];
                <div class="row">
                    <div class="col-md-4">
                        <img src="@item.ImageUri" width="266.6px" height="300px">
                        <input type="hidden" value="@item.ImageUri" name=@("items[" + i + "].ImageUri") />
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6"><h3>Hotel name:</h3></div>
                            <div class="col-md-6">@item.HotelName</div>
                            <input type="hidden" value="@item.HotelName" name=@("items[" + i + "].HotelName") />
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Room name:</h3></div>
                            <div class="col-md-6">@item.RoomName</div>
                            <input type="hidden" value="@item.RoomName" name=@("items[" + i + "].RoomName") />
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Room number:</h3></div>
                            <div class="col-md-6">@item.RoomNumber</div>
                            <input type="hidden" value="@item.RoomNumber" name=@("items[" + i + "].RoomNumber") />
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Address:</h3></div>
                            <div class="col-md-6">@item.Address, @item.City</div>
                            <input type="hidden" value="@item.Address" name=@("items[" + i + "].Address") />
                            <input type="hidden" value="@item.City" name=@("items[" + i + "].City") />
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Category name:</h3></div>
                            <div class="col-md-6">@item.CategoryName</div>
                            <input type="hidden" value="@item.CategoryName" name=@("items[" + i + "].CategoryName") />
                        </div>
                        
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6"><h3>Check in:</h3></div>
                            <div class="col-md-6">@item.CheckIn</div>
                            <input type="hidden" value="@item.CheckIn" name=@("items[" + i + "].CheckIn") />
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Check out:</h3></div>
                            <div class="col-md-6">@item.CheckOut</div>
                            <input type="hidden" value="@item.CheckOut" name=@("items[" + i + "].CheckOut") />
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Unit price:</h3></div>
                            <div class="col-md-6">@item.UnitPrice USD</div>
                            <input type="hidden" value="@item.UnitPrice" name=@("items[" + i + "].UnitPrice") />
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Day number:</h3></div>
                            <div class="col-md-6">@item.DayNumber</div>
                            <input type="hidden" value="@item.DayNumber" name=@("items[" + i + "].DayNumber") />
                        </div>
                        <div class="row">
                            <div class="col-md-6"><h3>Cost:</h3></div>
                            <div class="col-md-6">@item.Cost</div>
                            <input type="hidden" value="@item.Cost" name=@("items[" + i + "].Cost") />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12"><hr style="height:1px;border:none;color:#333;background-color:#333;"/></div>
                </div>
            }
<div class="row">
    <div class="col-md-12">
        <input type="hidden" asp-for="@Model.Total"/>
        @Model.Total USD
    </div>
</div>