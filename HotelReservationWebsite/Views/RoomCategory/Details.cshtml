@model RoomCategory
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Medium input -->
<div class="row">
    <div class="col-md-3"><hr/></div>
    <div class="col-md-6" >
        <div style="text-align:center">
            <h1 class="title-1 m-b-25">Room category details with id = @Model.RoomCategoryID</h1>
        </div>
    </div>
    <div class="col-md-3"><hr/></div>
</div>
<form style="width: 500px;margin-left:250px">
<div class="md-form">
  <input type="hidden" asp-for="RoomCategoryID" class="form-control">
</div>
<div class="md-form">
  <label asp-for="CategoryName"></label>
  <input type="text" asp-for="CategoryName" class="form-control" size="100px !important ">
</div>
<div class="md-form" style="margin-top:20px;">
  <a asp-action="Index" class="btn btn-primary mb-2" >Back</a>
</div>
</form>


