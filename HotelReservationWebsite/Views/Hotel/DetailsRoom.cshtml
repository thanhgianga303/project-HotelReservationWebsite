@model Room
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<div class="row">
    <div class="col-md-3"><hr/></div>
    <div class="col-md-6" >
        <div style="text-align:center">
            <h1 class="title-1 m-b-25">Room details with id = @Model.RoomID</h1>
        </div>
    </div>
    <div class="col-md-3"><hr/></div>
</div>
    <div class="row" style="margin-top:40px">
    <div class="col-md-5">
        <img src="@Model.ImageUrl"/>
     </div>
    <div class="col-md-7">
        <div class="row">
            <div class="col-md-7">Room Name:</div>
            <div class="col-md-5">@Model.RoomName</div>
        </div>
        <div class="row">
            <div class="col-md-7">Room Number:</div>
            <div class="col-md-5">@Model.RoomNumber</div>
        </div>
        <div class="row">
           <div class="col-md-7">Room Category:</div> 
            <div class="col-md-5">
                @Model.RoomCategoryName
            </div>
        </div>
        <div class="row">
           <div class="col-md-7">Room Status:</div> 
            <div class="col-md-5">
                @if(Model.RoomStatus == 1)
                {
                    <a class="btn btn-danger">Can put</a>
                }
                else
                {
                   <a class="btn btn-info">Reserved</a> 
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">Room area:</div>
            <div class="col-md-5">@Model.RoomArea</div>
        </div>
        <div class="row">
            <div class="col-md-7">Number of beds:</div>
            <div class="col-md-5">@Model.NumberOfBeds</div>
        </div>
        <div class="row">
           <div class="col-md-7">Unit Price:</div> 
            <div class="col-md-5">@Model.UnitPrice</div>
        </div>
        <div class="row">
           <a asp-action="SeeRoomList" asp-controller="Hotel" class="btn btn-secondary" asp-route-id="@Model.HotelID">Back</a>
        </div>
    </div>
</div>
