@model RoomViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row" style="margin-top:40px">
    <div class="col-md-12">
        <h1>Create room</h1>
     </div>
</div>
<form method="POST" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Room.HotelID">
    <input type="hidden" asp-for="@Model.Room.RoomID">
    <input type="hidden" asp-for="@Model.HotelId">
    <div class="row" style="margin-top:40px">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-7">Room Name:</div>
            <div class="col-md-5">
                <input type="text" class="form-control" asp-for="@Model.Room.RoomName">       
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">Room Number:</div>
            <div class="col-md-5">
                <input type="text" class="form-control" asp-for="@Model.Room.RoomNumber">
            </div>
        </div>
        <div class="row">
           <div class="col-md-7">Room Category:</div> 
            <div class="col-md-5">
            <select asp-for="@Model.Room.RoomCategoryID">
                    @foreach (var item in Model.RoomCategories)
                    {
                            <option value="@item.RoomCategoryID">@item.CategoryName</option>  
                    }
            </select>
            </div>
        </div>
        <div class="row">
           <div class="col-md-7">Unit Price:</div> 
            <div class="col-md-5">
                <input type="text" class="form-control" asp-for="@Model.Room.UnitPrice">
            </div>
         </div>
        <div class="row">
            <div class="col-md-12">
                <a asp-action="SeeRoomList" asp-controller="Hotel" class="btn btn-danger" asp-route-id="@Model.HotelId">Back</a>
                <button type="submit" class="btn btn-danger" >Create</button>
            </div>
        </div>
        
    </div>

</div>
<div class="row">
            <div class="col-md-12">
                 <h2>Upload image</h2>
            </div>
</div>
<div class="row">
            <div class="col-md-12">
                 <input type="file" asp-for="@Model.ImageUrl">
            </div>
</div>
</form>
