@model RoomViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<div class="row">
    <div class="col-md-3"><hr/></div>
    <div class="col-md-6" >
        <div style="text-align:center">
            <h1 class="title-1 m-b-25">Delete room with id = @Model.Room.RoomID</h1>
        </div>
    </div>
    <div class="col-md-3"><hr/></div>
</div>
@if(@Model.Room!= null)
{
    <form method="POST">
    <input type="hidden" asp-for="@Model.Room.RoomID">
    <input type="hidden" asp-for="@Model.Room.HotelID">

    <div class="row" style="margin-top:40px">
    <div class="col-md-5">
        <img src="@Model.Room.ImageUrl"/>
     </div>
    <div class="col-md-7">
        <div class="row">
            <div class="col-md-7">Room Name:</div>
            <div class="col-md-5">@Model.Room.RoomName</div>
        </div>
        <div class="row">
            <div class="col-md-7">Room Number:</div>
            <div class="col-md-5">@Model.Room.RoomNumber</div>
        </div>
        <div class="row">
           <div class="col-md-7">Room Category:</div> 
            <div class="col-md-5">
                @Model.Room.RoomCategoryName
            </div>
        </div>
        <div class="row">
           <div class="col-md-7">Room Status:</div> 
            <div class="col-md-5">
                @if(Model.Room.RoomStatus == 1)
                {
                    <a class="btn btn-danger">Can put</a>
                }
                else
                {
                   <a class="btn btn-info">Reserved</a> 
                }
            </div>
        </div>
         <div class="row">
            <div class="col-md-7">Room area:</div>
            <div class="col-md-5">@Model.Room.RoomArea</div>
        </div>
        <div class="row">
            <div class="col-md-7">Number of beds:</div>
            <div class="col-md-5">@Model.Room.NumberOfBeds</div>
        </div>
        <div class="row">
           <div class="col-md-7">Unit Price:</div> 
            <div class="col-md-5">@Model.Room.UnitPrice</div>
        </div>
        <div class="row">
           <a asp-action="SeeRoomList" asp-controller="Hotel" class="btn btn-secondary" asp-route-id="@Model.Room.HotelID">Back</a>
           <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>
</form>
}
else
{
    <div class="row" style="margin-top:40px">
    <div class="col-md-12">
        <h1>No Data</h1>
     </div> 
    </div>    
}
