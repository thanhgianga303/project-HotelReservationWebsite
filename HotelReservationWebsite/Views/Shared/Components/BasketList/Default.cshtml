@model Cart

<div class="container">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <div class="row" style="margin-top:20px;">
                    <div class="col-md-4">
                        <img src="@Model.Items[i].ImageUrl" width="266.6px" height="300px"/>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6"><h3>Room Name:</h3></div>
                            <div class="col-md-6">@Model.Items[i].HotelName</div>
                        </div>
                    </div>
                    <div class="col-md-4">Delete</div>
                </div>
            }                
</div>